<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bryantan.codingtricks">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity" android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".web.WebActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".web.css.cssActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".web.jquery.jqueryActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".web.javascript.javascriptActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".web.bootstrap.bootstrapActivity" android:windowSoftInputMode="stateAlwaysHidden" />


        <activity android:name=".iot.iotActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".ios.iosActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".android.droidActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>